# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=election_system
DB_USERNAME=root
DB_PASSWORD=your-database-password-here

# ASP.NET Core Configuration
ASPNETCORE_URLS=http://0.0.0.0:5110
ASPNETCORE_ENVIRONMENT=Development

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters
JWT_ISSUER=ElectionApi
JWT_AUDIENCE=ElectionApiUsers
JWT_EXPIRE_MINUTES=60

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_ENABLE_SSL=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Sistema de Eleições

# Vote Cryptography Keys
VOTE_MASTER_KEY=your-vote-encryption-master-key-here
VOTE_JUSTIFICATION_KEY=your-justification-encryption-key-here

# Swagger Authentication
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=your-swagger-password

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=logs/election-api-.txt

# Security
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Docker MySQL Configuration (for docker-compose)
DB_ROOT_PASSWORD=your-strong-mysql-root-password
MYSQL_ROOT_PASSWORD=${DB_ROOT_PASSWORD}
MYSQL_DATABASE=election_system

# Hybrid Photo System Settings (v1.1.0)
MAX_PHOTO_SIZE_MB=10
PHOTO_QUALITY=85
MAX_PHOTO_WIDTH=800
MAX_PHOTO_HEIGHT=600

# NEW v1.1.1 Features (02/08/2024)
SYSTEM_SEAL_SECRET=your-system-seal-secret-key-here
TWO_FACTOR_TOKEN_EXPIRY_MINUTES=5
ENABLE_SWAGGER=true
API_VERSION=1.1.1
API_BUILD_DATE=2024-08-02

# ===========================================
# SECURITY NOTES - UPDATED v1.1.1:
# 1. Copy this file to .env and fill with real values
# 2. Never commit .env file to version control
# 3. Use strong passwords (minimum 16 characters)
# 4. JWT and encryption keys must be minimum 32 characters
# 5. Change all default passwords in production
# 6. SMTP configuration required for 2FA emails
# 7. System seal secret critical for integrity verification
# 8. Version 1.1.1 adds: 2FA, System Seals, Enhanced Audit
# ===========================================