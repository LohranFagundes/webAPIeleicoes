{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=election_system;User=root;Password=;CharSet=utf8mb4;"
  },
  "JwtSettings": {
    "SecretKey": "fallback-key-use-env-variables-instead",
    "Issuer": "ElectionApi",
    "Audience": "ElectionApiUsers",
    "ExpireMinutes": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/election-api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName"]
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "noreply@election-system.com",
    "Password": "demo-password-change-in-production",
    "FromEmail": "noreply@election-system.com",
    "FromName": "Sistema de Eleições"
  },
  "VoteCryptography": {
    "MasterKey": "",
    "JustificationKey": ""
  },
  "SwaggerAuth": {
    "Username": "admin",
    "Password": "use-env-variables"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
