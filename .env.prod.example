# =============================================================================
# Election API .NET - Production Environment Configuration
# =============================================================================
# Copy this file to .env.prod and configure with your production values
# NEVER commit .env.prod to version control
# =============================================================================

# Application Version & Build
APP_VERSION=1.1.2
BUILD_DATE=2025-08-04

# Database Configuration (Production)
DB_HOST=db
DB_PORT=3306
DB_DATABASE=election_system_prod
DB_USERNAME=election_user
DB_PASSWORD=your_secure_database_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here

# External Port Mappings
DB_EXTERNAL_PORT=3306
API_EXTERNAL_PORT=5110
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Data Volume Paths (Absolute paths for production)
MYSQL_DATA_PATH=/opt/election-api/data/mysql
UPLOADS_PATH=/opt/election-api/data/uploads
LOGS_PATH=/opt/election-api/data/logs
REDIS_DATA_PATH=/opt/election-api/data/redis

# JWT Configuration (Production - Use Strong Keys)
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_256_bits_minimum_length_here
JWT_ISSUER=ElectionApiProd
JWT_AUDIENCE=ElectionApiProdUsers
JWT_EXPIRE_MINUTES=30

# SMTP Configuration (Production Mail Server)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_ENABLE_SSL=true
SMTP_USERNAME=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Sistema de Eleições - Produção

# Vote Encryption Keys (CRITICAL - Use Strong Keys)
VOTE_MASTER_KEY=your_vote_master_encryption_key_32_chars_minimum
VOTE_JUSTIFICATION_KEY=your_vote_justification_key_32_chars_minimum

# System Seal Configuration (CRITICAL - Secure Key)
SYSTEM_SEAL_SECRET=your_system_seal_secret_key_production_secure

# Swagger Configuration (Disabled in production by default)
ENABLE_SWAGGER=false
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=your_secure_swagger_password

# Photo System Configuration
MAX_PHOTO_SIZE_MB=5
PHOTO_QUALITY=80
MAX_PHOTO_WIDTH=600
MAX_PHOTO_HEIGHT=450

# 2FA Configuration
TWO_FACTOR_TOKEN_EXPIRY_MINUTES=3

# Redis Configuration (if using cache profile)
REDIS_PASSWORD=your_secure_redis_password

# SSL/TLS Configuration (if using nginx profile)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=Information
LOG_FILE_RETENTION_DAYS=30

# Security Settings
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com
CORS_ALLOW_CREDENTIALS=true

# Performance Settings
DB_CONNECTION_POOL_SIZE=50
API_REQUEST_TIMEOUT=30
DB_COMMAND_TIMEOUT=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/election-api/backups

# Email Templates
EMAIL_TEMPLATE_PATH=/app/templates
DEFAULT_LANGUAGE=pt-BR

# Rate Limiting (requests per minute)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# SECURITY NOTES:
# 1. All passwords should be at least 16 characters long
# 2. Use a mix of uppercase, lowercase, numbers, and special characters
# 3. Never use default or example passwords in production
# 4. Regularly rotate encryption keys and passwords
# 5. Keep this file secure and never commit to version control
# =============================================================================